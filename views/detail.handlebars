<script>
    const items = [
        {
            id: "1234",
            title: "{{ title }}",
            description: "Dispositivo m√≥vil de Tienda e-commerce",
            picture_url: `http://${window.location.host}/assets/003.jpg`,
            quantity: 1,
            unit_price: {{ price }},
    external_reference: "stupacode@gmail.com"
        }];
    console.log(items);

    async function createPreference() {
        const dest = "/preference";
        const headers = {
            'Accept': 'application/json',
            'Content-Type': 'application/json'
        };
        const body = JSON.stringify(items);

        try {
            const response = await fetch(dest, {
                method: 'POST',
                headers: headers,
                body: body
            });
            const resJson = await response.json();
            
            addButon(resJson.init_point);
        } catch (err) {
            console.log("error");
            console.error(err);
        }

    }

    function addButon(link) {
        const butonMP = `<a href=${link} class="buttonMP">Pagar la compra</a>`
        
        document.getElementById("pagar").innerHTML = butonMP;
    }
</script>